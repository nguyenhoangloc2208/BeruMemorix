{
  "name": "beru-memorix",
  "version": "1.0.0",
  "description": "MCP Memory Management System for AI in IDEs",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --apply src/",
    "format": "biome format src/",
    "format:write": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --apply src/",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage .biome-cache",
    "precommit": "npm run check:fix && npm run type-check && npm run test",
    "docker:build": "docker build -t beru-memorix .",
    "docker:run": "docker run -p 3000:3000 beru-memorix",
    "docker:dev": "docker-compose up --build",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "mcp:validate": "tsx src/scripts/validate-mcp.ts",
    "setup:dev": "./scripts/setup-dev.sh",
    "mcp": "tsx src/mcp/server.ts",
    "test:mcp": "tsx scripts/test-mcp.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/node": "^20.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "rate-limiter-flexible": "^5.0.3",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "@qdrant/js-client-rest": "^1.9.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "openai": "^4.28.4",
    "nanoid": "^5.0.6",
    "p-limit": "^5.0.0",
    "p-retry": "^6.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "tsc-alias": "^1.8.8",
    "vitest": "^1.2.2",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "testcontainers": "^10.7.1"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory-management",
    "ai",
    "ide",
    "typescript",
    "nodejs"
  ],
  "author": "BeruMemorix Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BeruMemorix/BeruMemorix.git"
  },
  "bugs": {
    "url": "https://github.com/BeruMemorix/BeruMemorix/issues"
  },
  "homepage": "https://github.com/BeruMemorix/BeruMemorix#readme"
}
